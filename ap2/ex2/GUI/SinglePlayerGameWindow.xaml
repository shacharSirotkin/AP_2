<Window x:Class="GUI.SinglePlayerGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d" 
        Height="550" Width="480">
    <StackPanel x:Name="stackPanel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="RestartButton" Content="Restart game" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" Grid.Column="0" Click="RestartButton_Click"/>
            <Button x:Name="SolveButton" Content="Solve!" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" Grid.Column="1" Click="SolveButton_Click"/>
            <Button x:Name="MenuButton" Content="Main menu" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" Grid.Column="2" Click="MenuButton_Click"/>
        </Grid>
    </StackPanel>
</Window>
